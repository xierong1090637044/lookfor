/*加入公司**/
.createheader
{
  float: left;
  height: 94vh;
  width: calc(100%);
  padding: 3vh 0px;
  text-align: center;
  background: rgb(0, 34, 40)
}
.ssimg
{
  float: left;
  width: 28px !important;
  height: 27px !important;
  margin-left: 28%;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  margin-top: 20px;
  border: 1px solid#fff;
  border-right: unset;
}
.ssinput
{
  float: left;
  height: 27px;
  line-height: 27px;
  border:1px solid#fff;
  border-left: unset;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
  font-size: 13px;
  color: #fff;
  margin-top: 20px;
}
.companylist
{
  float:left;
  width:98%;
  line-height:30px;
  padding:3px 4px 4px;
  border-bottom:1px solid#fff;
  color: #fff;
  height: 60px;
}
.companyname1
{
  float: left;
  width: 70%;
  text-align: left;
  font-size: 15px
}
.companyloc
{
  float: left;
  font-size: 13px;
}
.companyjoin
{
  float: right;
  color: rgb(23, 146, 184);
  margin-top: 12px;
  font-size: 15px;
}
.createtext
{
  color: #fff;
  float:left;
  width:100%;
  font-size:15px;
  margin-top: 110px;
}
.bottomimg
{
  position: fixed;
  bottom: -1%;
  width: 100%;
}
